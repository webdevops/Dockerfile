{% import 'Dockerfile/provision' as provision %}

{% macro alpine(role='') -%}
# Install development environment
RUN /usr/local/bin/apk-install \
        # Install tools
        graphviz \
        # Install php development stuff
        php7-xdebug \
    {{ provision.runRoleInline('php-dev', role) }}
{%- endmacro %}


{% macro centos(role='') -%}
# Install development environment
RUN /usr/local/bin/yum-install \
        # Install tools
        graphviz \
        # Install php development stuff
        php7-xdebug \
    {{ provision.runRoleInline('php-dev', role) }}
{%- endmacro %}


{% macro debian(role='') -%}
