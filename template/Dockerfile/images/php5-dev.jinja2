{% import 'Dockerfile/provision.jinja2' as provision %}

{% macro alpine(role='') -%}
# Install development environment
RUN /usr/local/bin/apk-install \
        # Install tools
        graphviz \
        # Install php development stuff
        php-xdebug \
    {{ provision.runRoleInline('php-dev', role) }}
{%- endmacro %}


